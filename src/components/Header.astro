---
import ThemeSwitcher from './ThemeSwitcher.astro'
---

<header class="top-0 left-0 z-40 fixed w-full border-t-14 border-green-700">
  <nav
    class="container mx-auto flex flex-wrap justify-between items-center py-8"
  >
    <div>
      <a href="/">
        <h1 class="text-3xl">LOGO</h1>
      </a>
    </div>

    <div class="block lg:hidden">
      <button
        class="flex items-center px-3 py-2 border rounded border-gray-500 hover:text-gray-600 hover:border-gray-600"
        data-cypress="hamburger"
      >
        <svg
          class="current-color h-3 w-3"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" fill="gray"
          ></path></svg
        >
      </button>
    </div>

    <ul
      class="uppercase tracking-wide font-bold w-full block flex-grow lg:space-x-8 space-y-6 lg:space-y-0 lg:flex lg:flex-initial lg:w-auto items-center mt-8 lg:mt-0"
    >
      <li class="mb-6 lg:mb-0">
        <a href="/#projects" class="text-copy-primary hover:text-gray-600"
          >Projects</a
        >
      </li>
      <li>
        <a href="/#about" class="text-copy-primary hover:text-gray-600">About</a
        >
      </li>
      <li>
        <a href="/#contact" class="text-copy-primary hover:text-gray-600"
          >Contact</a
        >
      </li>
      <li>
        <a href="/blog" class="text-copy-primary hover:text-gray-600">Blog</a>
      </li>

      <li>
        <a href="/search" class="text-copy-primary hover:text-gray-600">
          <svg
            fill="currentColor"
            class="w-6 h-6"
            viewBox="0 0 24 24"
            width="24"
            height="24"
          >
            <path
              class="heroicon-ui"
              d="M16.32 14.9l5.39 5.4a1 1 0 0 1-1.42 1.4l-5.38-5.38a8 8 0 1 1 1.41-1.41zM10 16a6 6 0 1 0 0-12 6 6 0 0 0 0 12z"
            ></path>
          </svg>
        </a>
      </li>

      <li>
        <ThemeSwitcher />
      </li>
    </ul>
  </nav>
</header>
