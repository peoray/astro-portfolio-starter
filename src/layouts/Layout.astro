---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import '../styles/main.css'

export interface Props {
  title?: string
  description?: string
  thumbnail?: string
  data?: any
  robots?: boolean
}

const { title, description, thumbnail, data, robots } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead {title} {description} {thumbnail} {data} {robots} />

  <body>
    <div
      class="content-wrapper bg-background-primary font-sans text-copy-primary leading-normal flex flex-col min-h-screen"
    >
      <Header />

      <main class="flex flex-col flex-grow overflow-hidden pt-12">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
